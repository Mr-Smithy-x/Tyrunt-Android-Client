<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content"
    app:contentPadding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/torrent_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Torrent Title" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:text="Torrent Author"
            android:textSize="10sp"
            android:id="@+id/torrent_author"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/torrent_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Torrent Age" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:text="Torrent Size"
            android:textSize="12sp"
            android:id="@+id/torrent_size"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.v7.widget.CardView>